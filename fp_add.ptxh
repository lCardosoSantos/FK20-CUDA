#ifndef FP_ADD

/**
 * @brief PTX macro for addition of two residues modulo p. Z←X+Y
 * 
 */
#define FP_ADD(Z, X, Y) \
    /* z = x + y */ \
 \
    add.u64.cc  Z##0, X##0, Y##0; \
    addc.u64.cc Z##1, X##1, Y##1; \
    addc.u64.cc Z##2, X##2, Y##2; \
    addc.u64.cc Z##3, X##3, Y##3; \
    addc.u64.cc Z##4, X##4, Y##4; \
    addc.u64.cc Z##5, X##5, Y##5; \
    addc.u32      z6,    0,    0; \
 \
    /* gt = (z>>320) > (m>>320) */ \
    /* nz = (z>>384) > 0 */ \
 \
    setp.gt.u64 gt, z5, 0x1a0111ea397fe69aU; \
    setp.ne.u32 nz, z6, 0; \
 \
    /* If gt then subtract m */ \
 \
    @gt sub.u64.cc  Z##0, Z##0, 0xb9feffffffffaaabU; \
    @gt subc.u64.cc Z##1, Z##1, 0x1eabfffeb153ffffU; \
    @gt subc.u64.cc Z##2, Z##2, 0x6730d2a0f6b0f624U; \
    @gt subc.u64.cc Z##3, Z##3, 0x64774b84f38512bfU; \
    @gt subc.u64.cc Z##4, Z##4, 0x4b1ba7b6434bacd7U; \
    @gt subc.u64.cc Z##5, Z##5, 0x1a0111ea397fe69aU; \
 \
    /* If nz then subtract mmu0 (= 9m) */ \
 \
    @nz sub.u64.cc  Z##0, Z##0, 0x89f6fffffffd0003U; \
    @nz subc.u64.cc Z##1, Z##1, 0x140bfff43bf3fffdU; \
    @nz subc.u64.cc Z##2, Z##2, 0xa0b767a8ac38a745U; \
    @nz subc.u64.cc Z##3, Z##3, 0x8831a7ac8fada8baU; \
    @nz subc.u64.cc Z##4, Z##4, 0xa3f8e5685da91392U; \
    @nz subc.u64.cc Z##5, Z##5, 0xea09a13c057f1b6cU

#endif
