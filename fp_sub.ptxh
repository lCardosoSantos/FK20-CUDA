#ifndef FP_SUB

/**
 * @brief PTX macro for subtraction of two residues modulo p. Z←X-Y
 * Z, X and Y may be the same.
 * Modifies T6.
 * 
 * For inclusion directly into ptx code by the C preprocessor.
 */
#define FP_SUB(Z, X, Y, T) newline\
    /* z = x - y */ newline\
 newline\
    sub.u64.cc  Z##0, X##0, Y##0; newline\
    subc.u64.cc Z##1, X##1, Y##1; newline\
    subc.u64.cc Z##2, X##2, Y##2; newline\
    subc.u64.cc Z##3, X##3, Y##3; newline\
    subc.u64.cc Z##4, X##4, Y##4; newline\
    subc.u64.cc Z##5, X##5, Y##5; newline\
    subc.u64    T##6,    0,    0; newline\
\
    /* gt = (z>>320) > (m>>320) */ newline\
    /* nz = (z>>384) > 0 */ newline\
\
    setp.gt.u64 gt, T##5, 0x1a0111ea397fe69aU; newline\
    setp.ne.u64 nz, T##6, 0; newline\
\
    /* If !gt then add m */ newline\
\
    @!gt add.u64.cc  Z##0, Z##0, 0xb9feffffffffaaabU; newline\
    @!gt addc.u64.cc Z##1, Z##1, 0x1eabfffeb153ffffU; newline\
    @!gt addc.u64.cc Z##2, Z##2, 0x6730d2a0f6b0f624U; newline\
    @!gt addc.u64.cc Z##3, Z##3, 0x64774b84f38512bfU; newline\
    @!gt addc.u64.cc Z##4, Z##4, 0x4b1ba7b6434bacd7U; newline\
    @!gt addc.u64.cc Z##5, Z##5, 0x1a0111ea397fe69aU; newline\
\
    /* If nz then add mmu0 (= 9m) */ newline\
\
    @nz add.u64.cc  Z##0, Z##0, 0x89f6fffffffd0003U; newline\
    @nz addc.u64.cc Z##1, Z##1, 0x140bfff43bf3fffdU; newline\
    @nz addc.u64.cc Z##2, Z##2, 0xa0b767a8ac38a745U; newline\
    @nz addc.u64.cc Z##3, Z##3, 0x8831a7ac8fada8baU; newline\
    @nz addc.u64.cc Z##4, Z##4, 0xa3f8e5685da91392U; newline\
    @nz addc.u64.cc Z##5, Z##5, 0xea09a13c057f1b6cU

#endif
